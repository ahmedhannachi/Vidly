@model Vidly.ViewModels.MovieFormViewModel

<h1>New movie</h1>


@using (Html.BeginForm("Create", "Movies")) {

    <div class="form-group">
        @Html.LabelFor(m => m.Movie.Name)
        @Html.TextBoxFor(m => m.Movie.Name, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Movie.ReleaseDate)
        @Html.TextBoxFor(m => m.Movie.ReleaseDate, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Movie.AddedAt)
        @Html.TextBoxFor(m => m.Movie.AddedAt, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Movie.GenreId)
        @Html.DropDownListFor(m => m.Movie.GenreId, new SelectList( Model.Genres, "Id", "Name" ), "Select a Genre", new { @class = "form-control" })
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
}

